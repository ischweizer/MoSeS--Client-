<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="appStartClickHandler"
    android:orientation="horizontal" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="0.99"
        android:onClick="appStartClickHandler"
        android:orientation="vertical" >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/installedAppListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="App name"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/installedAppListItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginBottom="15sp"
            android:layout_marginLeft="10sp"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        </TextView>

        <!--
    <Button
	    android:id="@+id/btnStartApp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10px"
	    android:text="Start app" >

    </Button>
        -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:orientation="vertical" >
    
    	<TextView
        android:id="@+id/userstudyIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="User study" />
    	
    	<TextView
        android:id="@+id/updateIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textColor="#22BB22"
        android:text="Update available" />
    
    </LinearLayout>
</LinearLayout>